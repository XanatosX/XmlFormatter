<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="XmlFormatterOsIndependent.Views.WindowBarView">
    <StackPanel Orientation="Vertical">
        <DockPanel HorizontalAlignment="Stretch" Margin="5">
			<StackPanel Orientation="Horizontal" DockPanel.Dock="Right" >
			<Button Command="{Binding MinimizeWindowCommand}">
				<PathIcon Data="{StaticResource line_horizontal_1_regular} " Width="12" Height="12"/>
			</Button>
            <Button Command="{Binding CloseWindowCommand}">
			    <PathIcon Data="{StaticResource dismiss_regular} " Width="12" Height="12"/>
			</Button>
			</StackPanel>
            <Grid DockPanel.Dock="Left" ColumnDefinitions="Auto, *">
				<Image Source="{Binding WindowIcon}" Height="20" Width="20" />
                <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding WindowName}"/>
            </Grid>
        </DockPanel>
        <Border BorderBrush="Black" BorderThickness="1"/>
    </StackPanel>
</UserControl>
