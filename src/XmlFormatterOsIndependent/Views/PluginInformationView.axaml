<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:p="clr-namespace:XmlFormatterOsIndependent.Properties"
			 xmlns:controls="clr-namespace:HyperText.Avalonia.Controls;assembly=HyperText.Avalonia"
			 xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="XmlFormatterOsIndependent.Views.PluginInformationView">
	<Grid Margin="5" RowDefinitions="Auto, Auto, *">
		<Grid RowDefinitions="Auto, Auto">
			<TextBlock Text="{Binding Name}" FontSize="30" IsVisible="{Binding !ProjectLinkPresent}"/>
			<controls:Hyperlink Alias="{Binding Name}" Url="{Binding ProjectUrl}" ToolTip.Tip="{Binding ProjectUrl}" IsVisible="{Binding ProjectLinkPresent}" FontSize="30"/>
			<StackPanel Grid.Row="1" Spacing="10" Orientation="Horizontal">
				<TextBlock Text="{Binding Version}"/>
				<TextBlock Text="{Binding Author}"  IsVisible="{Binding !AuthorLinkPresent}"/>
				<controls:Hyperlink Alias="{Binding Author}" Url="{Binding AuthorUrl}" ToolTip.Tip="{Binding AuthorUrl}" IsVisible="{Binding AuthorLinkPresent}"/>
			</StackPanel>
		</Grid>
		<md:MarkdownScrollViewer Margin="0,30,0,0" Grid.Row="2" Markdown="{Binding Description}"/>
	</Grid>
</UserControl>
