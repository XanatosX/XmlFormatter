<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="XmlFormatterOsIndependent.Views.DialogWindowBarView"
             IsHitTestVisible="True">
    <StackPanel Orientation="Vertical" IsHitTestVisible="True">
        <DockPanel HorizontalAlignment="Stretch" Margin="5" IsHitTestVisible="True">
			<StackPanel Orientation="Horizontal" DockPanel.Dock="Right" IsHitTestVisible="True">
                <Button Command="{Binding CloseWindowCommand}">
                    <PathIcon Data="{StaticResource dismiss_regular} " Width="12" Height="12"/>
                </Button>
			</StackPanel>
            <DockPanel DockPanel.Dock="Left" IsHitTestVisible="True">
				<Image DockPanel.Dock="Left" Source="{Binding WindowIcon}" Height="20" Width="20" IsHitTestVisible="True"/>
                <TextBlock DockPanel.Dock="Right" TextAlignment="Center" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding WindowName}" IsHitTestVisible="True"/>
            </DockPanel>
        </DockPanel>
    </StackPanel>
</UserControl>
