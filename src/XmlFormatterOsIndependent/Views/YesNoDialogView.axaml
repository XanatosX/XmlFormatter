<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:p="clr-namespace:XmlFormatterOsIndependent.Properties"
             xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
             x:Class="XmlFormatterOsIndependent.Views.YesNoDialogView">
             <Grid RowDefinitions="*, Auto">
                <md:MarkdownScrollViewer Markdown="{Binding DialogText}"/>
                <DockPanel Grid.Row="1" HorizontalAlignment="Stretch">
                  <Button DockPanel.Dock="Left" Content="{x:Static p:Resources.Button_Yes}" Command="{Binding YesCommand}"/>
                  <Button DockPanel.Dock="Right" Content="{x:Static p:Resources.Button_No}"  Command="{Binding NoCommand}"/>
                </DockPanel>
             </Grid>
</UserControl>
