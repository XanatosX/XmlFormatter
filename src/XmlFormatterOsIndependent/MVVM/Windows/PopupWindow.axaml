<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:XmlFormatterOsIndependent.MVVM.ViewModels.Main"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="XmlFormatterOsIndependent.MVVM.Windows.PopupWindow"
        Title="PopupWindow"
        SizeToContent="WidthAndHeight"
        CanResize="False">
  <Window.DataContext>
    <models:PopupWindowViewModel></models:PopupWindowViewModel>
  </Window.DataContext>
  <ContentControl Content="{Binding WindowContent, Mode=TwoWay}" Margin="5"></ContentControl>
</Window>
