<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AssemblyName>XmlFormatter</AssemblyName>
    <ApplicationIcon>XmlFormatterIcon.ico</ApplicationIcon>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaXaml Remove="MVVM\Windows\MainWindow.axaml" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Assets\HotfolderIcon.ico" />
    <None Remove="Assets\PluginIcon.ico" />
    <None Remove="Assets\XmlFormatterSettingsIcon.ico" />
    <None Remove="EmbeddedData\ThirdPartyTools.xml" />
    <None Remove="version.txt" />
    <None Remove="MVVM\Views\PluginManagerWindow.xaml" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Include="MVVM\Windows\MainWindow.axaml" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="EmbeddedData\ThirdPartyTools.xml" />
    <EmbeddedResource Include="Version.txt" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.10.5" />
    <PackageReference Include="Avalonia.Controls.DataGrid" Version="0.10.5" />
    <PackageReference Include="Avalonia.Desktop" Version="0.10.5" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.10.5" />
    <PackageReference Include="MessageBox.Avalonia" Version="1.3.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\PluginFramework\PluginFramework.csproj" />
    <ProjectReference Include="..\XMLFormatterModel\XmlFormatterModel.csproj" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Update="MVVM\Views\PluginManagerWindow.xaml">
      <Generator></Generator>
    </AvaloniaResource>
    <None Update="MVVM\Views\SettingsWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Assets\Images\" />
    <Folder Include="Assets\Data\" />
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if $(ConfigurationName) == Release (&#xD;&#xA;  echo &quot;Release build ignore post build!&quot;&#xD;&#xA;  exit&#xD;&#xA;)&#xD;&#xA;mkdir &quot;$(ProjectDir)\$(OutDir)\Plugins&quot;&#xD;&#xA;copy &quot;$(SolutionDir)src\CorePlugin\bin\$(ConfigurationName)\netstandard2.0\CorePlugin.dll&quot; &quot;$(TargetDir)\Plugins&quot;&#xD;&#xA;copy &quot;$(SolutionDir)src\JsonPlugin\bin\$(ConfigurationName)\netstandard2.0\JsonPlugin.dll&quot; &quot;$(TargetDir)\Plugins&quot;&#xD;&#xA;copy &quot;$(SolutionDir)src\JsonPlugin\bin\$(ConfigurationName)\netstandard2.0\Newtonsoft.Json.dll&quot; &quot;$(TargetDir)\Plugins&quot;" />
  </Target>
</Project>
